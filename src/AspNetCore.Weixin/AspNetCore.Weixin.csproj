<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>2.0.0-alpha-71217</Version>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <AssemblyName>AspNetCore.Weixin</AssemblyName>
    <Authors>AspNetCore</Authors>
    <PackageId>AspNetCore.Weixin</PackageId>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <Description>An AspNetCore middleware for (Tencent) Wechat/Weixin message handler and apis. (Windows/Linux works!)</Description>
    <PackageProjectUrl>https://github.com/myvas/AspNetCore.Weixin</PackageProjectUrl>
    <PackageTags>AspNetCore;Weixin</PackageTags>
    <TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);IncludeReferencedProjectInPackage</TargetsForTfmSpecificBuildOutput>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AspNetCore.Weixin.Core\AspNetCore.Weixin.Core.csproj">
      <PrivateAssets>All</PrivateAssets>
    </ProjectReference>
    <ProjectReference Include="..\AspNetCore.Weixin.Jssdk\AspNetCore.Weixin.Jssdk.csproj">
      <PrivateAssets>All</PrivateAssets>
    </ProjectReference>
  </ItemGroup>

  <Target Name="IncludeReferencedProjectInPackage">
    <ItemGroup>
      <BuildOutputInPackage Include="$(OutputPath)AspNetCore.Weixin.Jssdk.dll" />
      <BuildOutputInPackage Include="$(OutputPath)AspNetCore.Weixin.Core.dll" />
    </ItemGroup>
  </Target>

</Project>
